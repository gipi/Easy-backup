#!/bin/sh
# postrm script for easy-backup
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

action=$1


if [ "$action" = "purge" ]; then
	BACKUPUSER="backupuser"

	if [ -e /usr/share/debconf/confmodule ]; then
		. /usr/share/debconf/confmodule

		db_get easy-backup/backupuser
		BACKUPUSER="${RET:-backupuser}"

		db_purge
	fi

	if which deluser >/dev/null ; then
		echo "remove ssh directory"
		rm -vfr /var/cache/easy-backup/.ssh
		echo "remove $BACKUPUSER"
		deluser --remove-home "$BACKUPUSER" >/dev/null || true
		delgroup "$BACKUPUSER" >/dev/null || true
	fi

	# removes generate files in postinst
	rm -f /usr/share/easy-backup/conf/sudo
	rm -f /etc/sudoers.d/easy-backup

fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
