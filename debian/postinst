#!/bin/sh
# postinst script for easy-backup
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# Source debconf library.
if [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
fi

BACKUP_COMMAND="/usr/bin/rsync-checker.sh"

action=$1
version=$2
# only on new install or reconfigure
if [ "x$version" = "x" ] || [ "$action" = "reconfigure" ]; then
	db_get easy-backup/backupuser
	BACKUPUSER="${RET:-backupuser}"

	db_get easy-backup/public_key
	PUBLICKEY="${RET}"

	HOMEZ=/var/cache/easy-backup/

	# looks for pre-existing entry and if not, creates it
	if ! getent passwd "$BACKUPUSER" >/dev/null; then
		adduser --quiet --system --home "$HOMEZ" --shell /bin/bash \
			--uid 10000 \
			--no-create-home --gecos 'backup user' \
			--group "$BACKUPUSER"
	fi

	mkdir -p $HOMEZ/.ssh/

	# TODO: check if exists authorized_keys
	cat <<EOF >> $HOMEZ/.ssh/authorized_keys
command="$BACKUP_COMMAND" $PUBLICKEY
EOF

	cat <<EOF > /usr/share/easy-backup/conf/sudo
$BACKUPUSER ALL=NOPASSWD: /usr/bin/rsync
EOF
	cp /usr/share/easy-backup/conf/sudo /etc/sudoers.d/easy-backup
	chmod 0440 /etc/sudoers.d/easy-backup

fi


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
