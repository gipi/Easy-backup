#!/bin/sh
# postinst script for easy-backup
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# Source debconf library.
if [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
fi

action=$1
version=$2
# only on new install or reconfigure
if [ "x$version" = "x" ] || [ "$action" = "reconfigure" ]; then
	# ask for user to create
	#db_input medium gitolite/gituser || true
	#db_go
	db_get easy-backup/backupuser
	BACKUPUSER="${RET:-backupuser}"

	# looks for pre-existing entry and if not, creates it
	if ! getent passwd "$BACKUPUSER" >/dev/null; then
		adduser --quiet --system --home /var/cache/easy-backup/ --shell /bin/bash \
			--uid 10000 \
			--no-create-home --gecos 'backup user' \
			--group "$BACKUPUSER"
	fi

	cat <<EOF > /usr/share/easy-backup/conf/sudo
$BACKUPUSER ALL=NOPASSWD: /usr/bin/rsync
EOF

fi


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
